# ============================================
# NO CACHE cho Chatbot JavaScript Files
# Tránh phải Hard Refresh mỗi lần cập nhật
# ============================================

<IfModule mod_headers.c>
    # Chatbot files - ALWAYS reload, no cache
    <FilesMatch "\.(chatbot-.*\.js|geobot-.*\.js)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Specific chatbot files
    <FilesMatch "^(chatbot-ai|chatbot-widget|chatbot-demo|geobot-config|geobot-loader)\.js$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# ============================================
# Cache tối ưu cho các file khác
# ============================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images - cache 1 tháng
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    
    # CSS - cache 1 tuần
    ExpiresByType text/css "access plus 1 week"
    
    # JavaScript (trừ chatbot) - cache 1 tuần
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    
    # HTML - no cache (để luôn load mới nhất)
    ExpiresByType text/html "access plus 0 seconds"
    
    # Fonts - cache 1 năm
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# ============================================
# Gzip Compression để tăng tốc
# ============================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/javascript text/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ============================================
# Security Headers
# ============================================

<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Content Type Options
    Header set X-Content-Type-Options "nosniff"
</IfModule>
